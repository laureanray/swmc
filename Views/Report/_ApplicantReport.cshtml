@using System.Security.Cryptography
@model swmc.ViewModels.ApplicantViewModel

@{
    ViewBag.Title = "Test";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="~/css/report.css">
</head> 
<body>
<div class="container-fluid">
    <div class="reports-header">
        <div class="row mt-4">
            <div class="col text-center">
                                <img src="~/images/logo.png" alt="" style="width: 125px!important;">
     <h5> Sea World Maritime Corporation </h5>

                <p> 124-126 Sinciego, Pasay, 1300 Kalakhang Maynila </p>
            </div>
          
        </div>
        <h5 class="mt-3 display-4" style="font-size: 30px;"> Applicant Reports </h5>
        <p class="py-2"> @Model.DateFrom - @Model.DateTo </p>
    </div>
    <table class="table table-bordered table-sm mt-2">
        <thead>
        <tr>
            <th> Applicant ID  </th>
            <th> Name </th>
            <th> Cellphone </th>
            <th> Telephone </th>
            <th> Address </th>
            <th> Position </th>
            <th> Date Created  </th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Applicants.Count > 0)
        {    
            foreach (var p in Model.Applicants)
            {
                <tr>
                    <td> @p.ApplicantId</td>
                    <td> @p.FirstName @p.LastName</td>
                    <td> @p.Cellphone </td>
                    <td> @p.Telephone </td>
                    <td> @p.Address</td>
                    <td> @p.Position.PositionName </td>
                    <td> @p.DateCreated </td>
                </tr>
            }
        }
        </tbody>
    </table>
    
    <p class="small text-dark"> Generated: @DateTime.Now </p>
    <p class="small text-dark"> Generated by: @Model.GeneratedBy</p>

</div>

</body>
</html>