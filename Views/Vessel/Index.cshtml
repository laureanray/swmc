       $("#updateModal #portRegistry").val().length === 0 || 
       $("#updateModal #officialNumber").val().length === 0 ||
       $("#updateModal #cba").val().length === 0 ||
       $("#updateModal #imoNumber").val().length === 0 || 
       $("#updateModal #vesselAbr").val().length === 0 || 
       $("#updateModal #horsePower").val().length === 0 || 
       $("#updateModal #classification").val().length === 0 || 
       $("#updateModal #type").val().length === 0 || 
       $("#updateModal #yearBuilt").val().length === 0 ||
       $("#updateModal #yearEnrolled").val().length === 0
       ){
           $("#updateBtn").prop('disabled', true);
       } else{
           $("#updateBtn").prop('disabled', false);
       }
              var data = {
                      vesselName: $("#updateModal #vesselName").val(),
                      principal: $("#updateModal #principal").val(),
                      flag: $("#updateModal #flag").val(),
                      grossTonnage: $("#updateModal #grossTonnage").val(),
                      jsu: $("#updateModal #jsu").val(),
                      engineMake: $("#updateModal #engineMake").val(),
                      portRegistry: $("#updateModal #portRegistry").val(),
                      officialNumber: $("#updateModal #officialNumber").val(),
                      cba: $("#updateModal #cba").val(),
                      imoNumber: $("#updateModal #imoNumber").val(),
                      vesselAbr: $("#updateModal #vesselAbr").val(),
                      horsePower: $("#updateModal #horsePower").val(),
                      classification: $("#updateModal #classification").val(),
                      type: $("#updateModal #type").val(),
                      yearBuilt: $("#updateModal #yearBuilt").val(),
                      yearEnrolled: $("#updateModal #yearEnrolled").val()
                  };
         console.log(data);
         console.log('check');
    }
    
    $("#updateBtn").click(function(){
      $(this).attr('disabled', true);
      $(this).text('Updating...');
      
        var data = {
             vesselId: $("#updateModal #vesselIdToUpdate").val(),
             vesselName: $("#updateModal #vesselName").val(),
             principal: $("#updateModal #principal").val(),
             flag: $("#updateModal #flag").val(),
             grossTonnage: $("#updateModal #grossTonnage").val(),
             jsu: $("#updateModal #jsu").val(),
             engineMake: $("#updateModal #engineMake").val(),
             portRegistry: $("#updateModal #portRegistry").val(),
             officialNumber: $("#updateModal #officialNumber").val(),
             cba: $("#updateModal #cba").val(),
             imoNumber: $("#updateModal #imoNumber").val(),
             vesselAbr: $("#updateModal #vesselAbr").val(),
             horsePower: $("#updateModal #horsePower").val(),
             classification: $("#updateModal #classification").val(),
             type: $("#updateModal #type").val(),
             yearBuilt: $("#updateModal #yearBuilt").val(),
             yearEnrolled: $("#updateModal #yearEnrolled").val()
         };
        
        updateVessel(data, function(res){
           if(res.message == "Success"){
               setTimeout(function(){
                    $("#updateBtn").attr('disabled', false);
                     $("#updateBtn").text('Update');
                     $("#updateModal").modal('hide');
                     init();
               }, 500);
           } 
        });
  
    });
    
    init();
    
</script>