<!-- Archive Modal -->
<div class="modal fade" id="archiveModal" tabindex="-1" role="dialog" aria-labelledby="archiveModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="archiveModalLabel">Archive Vessel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to archive vessel?
                <input type="hidden" id="vesselId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="archiveBtn" class="btn btn-danger">Archive</button>
            </div>
        </div>
    </div>
</div>

<script >  
    var table;
    
    function getVesselData(id, callback){
        $.ajax({
            type: 'GET',
            url: "/api/Vessel/" + id,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: callback,
            error: function(err){
                console.log(err);
            } 
        })
    }
    
    function initDataTable(data){
        for(var i = 0; i < data.length; i++){
            data[i].controls = "<button class='btn btn-outline-danger archive' data-id='"+ data[i].vesselId +"'> Archive </button> " +
                               "<button class='btn btn-outline-secondary update' data-id='" + data[i].vesselId + "'> Update </button>";
        }
        table = $("#vesselTable").DataTable({
            data: data,
            columns: [
                {
                    "className":      'details-control',
                    "orderable":      false,
                    "data":           null,
                    "defaultContent": ''
                },
                { "data": "vesselId" },
                { "data": "vesselName" },
                { "data": "principal" },
                { "data": "grossTonnage" },
                { "data": "horsePower" },
                { "data": "yearEnrolled" },
                { "data": "controls" }
            ],
            destroy: true,
            drawCallback: function(setting){
                $(".archive").off();
                $(".archive").click(function(){
                   var id = $(this).data('id');
                   $("#vesselId").val(id);
                   $("#archiveModal").modal("show");
                });
                
                $(".update").off();
                $(".update").click(function(){
                   var id = $(this).data('id');
                   getVesselData(id, function(res){
                      console.log(res); 
                      $("#updateModal #cba").val(res.cba);
                      $("#updateModal #classification").val(res.classification);
                      $("#updateModal #engineMake").val(res.engineMake);
                      $("#updateModal #flag").val(res.flag);
                      $("#updateModal #grossTonnage").val(res.grossTonnage);
                      $("#updateModal #horsePower").val(res.horsePower);
                      $("#updateModal #imoNumber").val(res.imoNumber);
                      $("#updateModal #jsu").val(res.jsu);
                      $("#updateModal #officialNumber").val(res.officialNumber);
                      $("#updateModal #portRegistry").val(res.portRegistry);
                      $("#updateModal #principal").val(res.principal);
                      $("#updateModal #type").val(res.type);
                      $("#updateModal #vesselAbr").val(res.vesselAbr);
                      $("#updateModal #vesselName").val(res.vesselName);
                      $("#updateModal #yearBuilt").val(res.yearBuilt);
                      $("#updateModal #yearEnrolled").val(res.yearEnrolled);
                      $("#updateModal #vesselIdToUpdate").val(id);
                      
                      $("#updateModal").modal('show');
                        check();

                   });
                });
                
            }        

        });
    }
    
    function getData(callback){
        $.ajax({
            type: 'GET',
            dataType: 'json',
            url: '/api/Vessel/GetVessels',
            success: function(data){
                callback(data);
            },
            error: function(err){
                console.log(err);
            }
        })
    }
    
    function updateVessel(data, callback){
        $.ajax({
            type: 'POST',
            contentType: "application/json; charset=utf-8",
            url: "/api/Vessel/UpdateVessel",
            dataType: 'json',
            data: JSON.stringify(data),
            success: callback,
            error: function(err){
                console.log(err);
            }
        });
    }
    
    function addVessel(data, callback){
        $.ajax({
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            data: JSON.stringify(data),
            url: '/api/Vessel/AddVessel',
            success: callback,
            error: function(err){
                console.log(err);
            }
        })
    }
    
    function archiveVessel(id, callback){
        $.ajax({
            type: 'GET',
            url: '/api/Vessel/ArchiveVessel?vesselId=' + id,
            contentType: 'application/json; charset=utf-8',
            success: callback,
            error: function(err) {
                console.log(err);
            }
        })
    }
    
    function init(){
        getData(function(data){
            console.log(data);
            initDataTable(data);
        });
    }
    $("#updateModal input").keyup(function(){
        check();
    });
    
    
    $("#addModal input").keyup(function(){
       if( $("#vesselName").val().length === 0 || 
           $("#principal").val().length === 0 || 
           $("#flag").val().length === 0 ||
           $("#grossTonnage").val().length === 0 ||
           $("#jsu").val().length === 0 || 
           $("#engineMake").val().length === 0 ||
           $("#portRegistry").val().length === 0 || 
           $("#officialNumber").val().length === 0 ||
           $("#cba").val().length === 0 ||
           $("#imoNumber").val().length === 0 || 
           $("#vesselAbr").val().length === 0 || 
           $("#horsePower").val().length === 0 || 
           $("#classification").val().length === 0 || 
           $("#type").val().length === 0 || 
           $("#yearBuilt").val().length === 0 ||
           $("#yearEnrolled").val().length === 0
           ){
                $("#createBtn").prop('disabled', true);
           } else{
               $("#createBtn").prop('disabled', false);
           }

    });
    
    $("#createBtn").click(function(){
        $(this).prop('disabled', true);
        $(this).text('Creating...');
        
        var data = {
            vesselName: $("#vesselName").val(),
            principal: $("#principal").val(),
            flag: $("#flag").val(),
            grossTonnage: $("#grossTonnage").val(),
            jsu: $("#jsu").val(),
            engineMake: $("#engineMake").val(),
            portRegistry: $("#portRegistry").val(),
            officialNumber: $("#officialNumber").val(),
            cba: $("#cba").val(),
            imoNumber: $("#imoNumber").val(),
            vesselAbr: $("#vesselAbr").val(),
            horsePower: $("#horsePower").val(),
            classification: $("#classification").val(),
            type: $("#type").val(),
            yearBuilt: $("#yearBuilt").val(),
            yearEnrolled: $("#yearEnrolled").val()
        };
        
        addVessel(data, function(res){
            if(res.message === "Success"){
                setTimeout(function(){
                    $("#addModal").modal('hide');
                    $(this).prop('disabled', false);
                    $(this).text('Create');
                    init();
                }, 500);
            }
        })
        
    });
    
    
    $("#archiveBtn").click(function(){
        $(this).attr('disabled', true);
        $(this).text('Archiving');
        
        archiveVessel($("#vesselId").val(), function(res){
            if(res.message === "Success"){
                setTimeout(function(){
                    $("#archiveBtn").text('Archive');
                    $("#archiveBtn").prop('disabled', false);
                    $("#archiveModal").modal('hide');
                    init();
                }, 500);
            }
        })
    });
    
    function check(){
         if( $("#updateModal #vesselName").val().length === 0 || 
       $("#updateModal #principal").val().length === 0 || 
