@{
    ViewData["Title"] = "Archived Vessels";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <h3> Archived Vessels </h3>
    <div class="row mt-3">
        <div class="col">

            <table id="vesselTable" class="display">
                <thead>
                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>Vessel Name</th>
                    <th>Principal</th>
                    <th>Gross Tonnage</th>
                    <th>Horsepower</th>
                    <th>Year Enrolled</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Restore Modal -->
<div class="modal fade" id="restoreModal" tabindex="-1" role="dialog" aria-labelledby="restoreModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="restoreModalLabel">Archive Vessel</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to restore vessel?
                <input type="hidden" id="vesselId">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" id="restoreBtn" class="btn btn-success">Restore</button>
            </div>
        </div>
    </div>
</div>

<script >  
    var table;
    function initDataTable(data){
        for(var i = 0; i < data.length; i++){
            data[i].controls = "<button class='btn btn-outline-success restore' data-id='"+ data[i].vesselId +"'> Restore </button>";
        }
        table = $("#vesselTable").DataTable({
            data: data,
            columns: [
                {
                    "className":      'details-control',
                    "orderable":      false,
                    "data":           null,
                    "defaultContent": ''
                },
                { "data": "vesselId" },
                { "data": "vesselName" },
                { "data": "principal" },
                { "data": "grossTonnage" },
                { "data": "horsePower" },
                { "data": "yearEnrolled" },
                { "data": "controls" }
            ],
            destroy: true,
            drawCallback: function(setting){
                $(".restore").off();
                $(".restore").click(function(){
                   var id = $(this).data('id');
                   $("#vesselId").val(id);
                   $("#restoreModal").modal("show");
                });
            }        

        }); 
    }
    
    function getData(callback){
        $.ajax({
            type: 'GET',
            dataType: 'json',
            url: '/api/Vessel/GetArchivedVessels',
            success: function(data){
                callback(data);
            },
            error: function(err){
                console.log(err);
            }
        })
    }

    
    function restoreVessel(id, callback){
        $.ajax({
            type: 'GET',
            url: '/api/Vessel/RestoreVessel?vesselId=' + id,
            contentType: 'application/json; charset=utf-8',
            success: callback,
            error: function(err) {
                console.log(err);
            }
        })
    }
    
    function init(){
        getData(function(data){
            console.log(data);
            initDataTable(data);
        });
    }
      
   
    $("#restoreBtn").click(function(){
        $(this).attr('disabled', true);
        $(this).text('Restoring...');
        
        restoreVessel($("#vesselId").val(), function(res){
            if(res.message === "Success"){
                setTimeout(function(){
                    $("#restoreBtn").text('Archive');
                    $("#restoreBtn").prop('disabled', false);
                    $("#restoreModal").modal('hide');
                    init();
                }, 500);
            }
        })
    });
    
    init();
    
</script>